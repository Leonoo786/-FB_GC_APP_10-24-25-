
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in and is the owner of the data
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Grant access to the user's own profile document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Grant access to all of the user's subcollections
    match /users/{userId}/projects/{projectId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/budgetCategories/{budgetCategoryId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/vendors/{vendorId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/teamMembers/{teamMemberId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/budgetItems/{budgetItemId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/expenses/{expenseId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/changeOrders/{changeOrderId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/tasks/{taskId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/rfis/{rfiId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/issues/{issueId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/drawings/{drawingId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/clientUploads/{clientUploadId} {
      allow read, write, delete, list: if isOwner(userId);
    }
    match /users/{userId}/milestones/{milestoneId} {
      allow read, write, delete, list: if isOwner(userId);
    }
  }
}
