
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    // This assumes the document lives under a path that includes the user's ID.
    // e.g., /users/{userId}/...
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Grant everyone read access to their own user profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Grant read, write, and list access to all subcollections for the owner
    match /users/{userId}/{document=**} {
      allow read, write, list: if isOwner(userId);
    }
  }
}
