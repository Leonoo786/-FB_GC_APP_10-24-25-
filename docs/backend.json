
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents an application user's profile information.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity, matches Firebase Auth UID."
        },
        "companyName": {
          "type": "string"
        },
        "companyLogoUrl": {
          "type": "string",
          "format": "uri"
        },
        "userName": {
          "type": "string"
        },
        "userAvatarUrl": {
          "type": "string",
          "format": "uri"
        },
        "userEmail": {
          "type": "string",
          "format": "email"
        }
      },
      "required": [
        "id",
        "userName",
        "userEmail"
      ]
    },
    "Project": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Project",
      "type": "object",
      "description": "Represents a construction project.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectNumber": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "ownerName": {
          "type": "string"
        },
        "addressStreet": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "zip": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "percentComplete": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "revisedContract": {
          "type": "number"
        },
        "imageUrl": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "projectNumber",
        "name",
        "status",
        "percentComplete"
      ]
    },
    "BudgetCategory": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BudgetCategory",
      "type": "object",
      "description": "Represents a category in the project budget.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Vendor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Vendor",
      "type": "object",
      "description": "Represents a vendor or subcontractor.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "contactPerson": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "trade": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "trade"
      ]
    },
    "TeamMember": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TeamMember",
      "type": "object",
      "description": "Represents a team member working on the projects.",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "name",
        "role"
      ]
    },
    "BudgetItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "BudgetItem",
      "type": "object",
      "description": "Represents a line item in the project budget.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "categoryId": {
          "type": "string"
        },
        "costType": {
          "type": "string"
        },
        "originalBudget": {
          "type": "number"
        },
        "approvedCOBudget": {
          "type": "number"
        },
        "committedCost": {
          "type": "number"
        },
        "projectedCost": {
          "type": "number"
        }
      },
      "required": [
        "id",
        "projectId",
        "categoryId",
        "costType",
        "originalBudget"
      ]
    },
    "Expense": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Expense",
      "type": "object",
      "description": "Represents an expense incurred on a project.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "category": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "paymentMethod": {
          "type": "string"
        },
        "invoiceNumber": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "projectId",
        "date",
        "amount"
      ]
    },
    "ChangeOrder": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ChangeOrder",
      "type": "object",
      "description": "Represents a change order for a project.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "coNumber": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "totalRequest": {
          "type": "number"
        },
        "status": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "projectId",
        "coNumber",
        "status"
      ]
    },
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task within a project.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "priority": {
          "type": "string"
        },
        "assigneeId": {
          "type": "string"
        },
        "dueDate": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "projectId",
        "title",
        "status",
        "priority"
      ]
    },
    "RFI": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "RFI",
      "type": "object",
      "description": "Represents a Request for Information.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "rfiNumber": {
          "type": "string"
        },
        "dateSubmitted": {
          "type": "string",
          "format": "date-time"
        },
        "subject": {
          "type": "string"
        },
        "question": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "answer": {
          "type": "string"
        },
        "dateAnswered": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "projectId",
        "rfiNumber",
        "dateSubmitted",
        "subject",
        "question",
        "status"
      ]
    },
    "Issue": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Issue",
      "type": "object",
      "description": "Represents an issue encountered during the project.",
      "properties": {
        "id": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "severity": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "correctiveAction": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "date",
        "severity",
        "description",
        "status"
      ]
    },
    "Drawing": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Drawing",
      "type": "object",
      "description": "Represents a project drawing.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "sheetNo": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "versions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "projectId",
        "sheetNo",
        "title"
      ]
    },
    "ClientUpload": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ClientUpload",
      "type": "object",
      "description": "Represents a file uploaded by a client.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "fileName": {
          "type": "string"
        },
        "fileType": {
          "type": "string"
        },
        "fileUrl": {
          "type": "string",
          "format": "uri"
        },
        "fileSize": {
          "type": "number"
        },
        "uploadedAt": {
          "type": "string",
          "format": "date-time"
        },
        "uploadedBy": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "projectId",
        "fileName",
        "fileType",
        "fileUrl",
        "fileSize",
        "uploadedAt",
        "uploadedBy"
      ]
    },
    "Milestone": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Milestone",
      "type": "object",
      "description": "Represents a major project milestone.",
      "properties": {
        "id": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "dueDate": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "projectId",
        "name",
        "dueDate",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores public user profile and company information."
        }
      },
      {
        "path": "/users/{userId}/projects/{projectId}",
        "definition": {
          "entityName": "Project",
          "schema": {
            "$ref": "#/backend/entities/Project"
          },
          "description": "Stores projects for a user."
        }
      },
      {
        "path": "/users/{userId}/budgetCategories/{budgetCategoryId}",
        "definition": {
          "entityName": "BudgetCategory",
          "schema": {
            "$ref": "#/backend/entities/BudgetCategory"
          },
          "description": "Stores a user's list of budget categories."
        }
      },
      {
        "path": "/users/{userId}/vendors/{vendorId}",
        "definition": {
          "entityName": "Vendor",
          "schema": {
            "$ref": "#/backend/entities/Vendor"
          },
          "description": "Stores a user's list of vendors."
        }
      },
      {
        "path": "/users/{userId}/teamMembers/{teamMemberId}",
        "definition": {
          "entityName": "TeamMember",
          "schema": {
            "$ref": "#/backend/entities/TeamMember"
          },
          "description": "Stores a user's list of team members."
        }
      },
      {
        "path": "/users/{userId}/budgetItems/{budgetItemId}",
        "definition": {
          "entityName": "BudgetItem",
          "schema": {
            "$ref": "#/backend/entities/BudgetItem"
          },
          "description": "Stores budget items for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/expenses/{expenseId}",
        "definition": {
          "entityName": "Expense",
          "schema": {
            "$ref": "#/backend/entities/Expense"
          },
          "description": "Stores expenses for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/changeOrders/{changeOrderId}",
        "definition": {
          "entityName": "ChangeOrder",
          "schema": {
            "$ref": "#/backend/entities/ChangeOrder"
          },
          "description": "Stores change orders for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/tasks/{taskId}",
        "definition": {
          "entityName": "Task",
          "schema": {
            "$ref": "#/backend/entities/Task"
          },
          "description": "Stores tasks for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/rfis/{rfiId}",
        "definition": {
          "entityName": "RFI",
          "schema": {
            "$ref": "#/backend/entities/RFI"
          },
          "description": "Stores RFIs for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/issues/{issueId}",
        "definition": {
          "entityName": "Issue",
          "schema": {
            "$ref": "#/backend/entities/Issue"
          },
          "description": "Stores issues for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/drawings/{drawingId}",
        "definition": {
          "entityName": "Drawing",
          "schema": {
            "$ref": "#/backend/entities/Drawing"
          },
          "description": "Stores drawings for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/clientUploads/{clientUploadId}",
        "definition": {
          "entityName": "ClientUpload",
          "schema": {
            "$ref": "#/backend/entities/ClientUpload"
          },
          "description": "Stores client uploads for a user, linked to a project."
        }
      },
      {
        "path": "/users/{userId}/milestones/{milestoneId}",
        "definition": {
          "entityName": "Milestone",
          "schema": {
            "$ref": "#/backend/entities/Milestone"
          },
          "description": "Stores milestones for a user, linked to a project."
        }
      }
    ]
  }
}
