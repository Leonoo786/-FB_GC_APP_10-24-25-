{
  "entities": {
    "Project": {
      "title": "Project",
      "description": "Represents a single construction project.",
      "type": "object",
      "properties": {
        "projectNumber": { "type": "string" },
        "name": { "type": "string" },
        "ownerName": { "type": "string" },
        "addressStreet": { "type": "string" },
        "city": { "type": "string" },
        "zip": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["Planning", "In Progress", "Completed"] },
        "percentComplete": { "type": "number" },
        "startDate": { "type": "string", "format": "date" },
        "endDate": { "type": "string", "format": "date" },
        "revisedContract": { "type": "number" },
        "finalBidAmount": { "type": "number" },
        "imageUrl": { "type": "string" },
        "imageHint": { "type": "string" }
      },
      "required": ["name", "ownerName", "description", "status", "startDate", "endDate"]
    },
    "BudgetCategory": {
      "title": "Budget Category",
      "description": "A category for budget items.",
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      },
      "required": ["name"]
    },
    "Vendor": {
      "title": "Vendor",
      "description": "A vendor or subcontractor.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "trade": { "type": "string" }
      },
      "required": ["name", "trade"]
    },
    "TeamMember": {
      "title": "Team Member",
      "description": "An internal team member.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "avatarUrl": { "type": "string" }
      },
      "required": ["name", "role", "email"]
    },
    "BudgetItem": {
      "title": "Budget Item",
      "description": "A single line item in a project's budget.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "category": { "type": "string" },
        "costType": { "type": "string", "enum": ["labor", "material", "both"] },
        "notes": { "type": "string" },
        "originalBudget": { "type": "number" },
        "approvedCOBudget": { "type": "number" },
        "committedCost": { "type": "number" },
        "projectedCost": { "type": "number" }
      },
      "required": ["projectId", "category", "costType", "originalBudget"]
    },
    "Expense": {
      "title": "Expense",
      "description": "A single expense record for a project.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "category": { "type": "string" },
        "vendorName": { "type": "string" },
        "description": { "type": "string" },
        "amount": { "type": "number" },
        "paymentMethod": { "type": "string" },
        "paymentReference": { "type": "string" },
        "invoiceNumber": { "type": "string" }
      },
      "required": ["projectId", "date", "category", "description", "amount", "paymentMethod"]
    },
    "ChangeOrder": {
      "title": "Change Order",
      "description": "A change order for a project.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "coNumber": { "type": "string" },
        "description": { "type": "string" },
        "totalRequest": { "type": "number" },
        "status": { "type": "string", "enum": ["Submitted", "Approved", "Executed", "Rejected"] }
      },
      "required": ["projectId", "coNumber", "description", "totalRequest", "status"]
    },
    "Task": {
      "title": "Task",
      "description": "A single task for a project.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "title": { "type": "string" },
        "status": { "type": "string", "enum": ["To Do", "In Progress", "Done"] },
        "priority": { "type": "string", "enum": ["Low", "Medium", "High"] },
        "assigneeId": { "type": "string" },
        "dueDate": { "type": "string", "format": "date" }
      },
      "required": ["projectId", "title", "status", "priority"]
    },
    "RFI": {
      "title": "Request for Information",
      "description": "A Request for Information (RFI) for a project.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "rfiNumber": { "type": "string" },
        "dateSubmitted": { "type": "string", "format": "date" },
        "subject": { "type": "string" },
        "question": { "type": "string" },
        "status": { "type": "string", "enum": ["Open", "Closed"] },
        "answer": { "type": "string" },
        "dateAnswered": { "type": "string", "format": "date" }
      },
      "required": ["projectId", "rfiNumber", "dateSubmitted", "subject", "question", "status"]
    },
    "Issue": {
      "title": "Issue",
      "description": "An issue or problem on a project.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "severity": { "type": "string", "enum": ["Low", "Medium", "High"] },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["Open", "Closed"] },
        "correctiveAction": { "type": "string" }
      },
      "required": ["projectId", "date", "severity", "description", "status"]
    },
    "Milestone": {
      "title": "Milestone",
      "description": "A major milestone in a project.",
      "type": "object",
      "properties": {
        "projectId": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "dueDate": { "type": "string", "format": "date" },
        "status": { "type": "string", "enum": ["Upcoming", "In Progress", "Completed"] }
      },
      "required": ["projectId", "name", "dueDate", "status"]
    },
    "AppUser": {
      "title": "App User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "avatarUrl": { "type": "string" }
      },
      "required": ["name", "email"]
    },
    "CompanyProfile": {
      "title": "Company Profile",
      "description": "The profile of the company using the app.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "logoUrl": { "type": "string" }
      },
      "required": ["name"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores individual project details."
    },
    "/budgetCategories/{categoryId}": {
      "schema": { "$ref": "#/entities/BudgetCategory" },
      "description": "Stores the master list of budget categories."
    },
    "/vendors/{vendorId}": {
      "schema": { "$ref": "#/entities/Vendor" },
      "description": "Stores the master list of vendors."
    },
    "/teamMembers/{memberId}": {
      "schema": { "$ref": "#/entities/TeamMember" },
      "description": "Stores the master list of internal team members."
    },
    "/budgetItems/{itemId}": {
      "schema": { "$ref": "#/entities/BudgetItem" },
      "description": "Stores all budget items across all projects."
    },
    "/expenses/{expenseId}": {
      "schema": { "$ref": "#/entities/Expense" },
      "description": "Stores all expenses across all projects."
    },
    "/changeOrders/{changeOrderId}": {
      "schema": { "$ref": "#/entities/ChangeOrder" },
      "description": "Stores all change orders across all projects."
    },
    "/tasks/{taskId}": {
      "schema": { "$ref": "#/entities/Task" },
      "description": "Stores all tasks across all projects."
    },
    "/rfis/{rfiId}": {
      "schema": { "$ref": "#/entities/RFI" },
      "description": "Stores all RFIs across all projects."
    },
    "/issues/{issueId}": {
      "schema": { "$ref": "#/entities/Issue" },
      "description": "Stores all issues across all projects."
    },
    "/milestones/{milestoneId}": {
      "schema": { "$ref": "#/entities/Milestone" },
      "description": "Stores all milestones across all projects."
    },
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/AppUser" },
      "description": "Stores public user profile information."
    },
    "/company/profile": {
        "schema": { "$ref": "#/entities/CompanyProfile"},
        "description": "Stores the company's profile information."
    